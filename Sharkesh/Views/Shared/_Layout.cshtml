<!DOCTYPE html>
<html lang="de-at">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span> <!-- Screenreader-->
                    <span class="icon-bar"></span> <!-- drei striche im mobile modus-->
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding-top:0;padding-bottom:0;" href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/img/FirmenBilder/GruppiertesFirmenLogo.png")" alt="Sharkesh IT KG Logo" height="50" /></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav" style="text-align:center">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Über Uns", "About", "Home")</li>
                    <li>@Html.ActionLink("Projekte", "Projects", "Home")</li>
                    <li>@Html.ActionLink("Angebote", "Offers", "Home")</li>
                    <li>@Html.ActionLink("Kontakte", "Contact", "Home")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div style="margin-top: 51px;">
        @RenderBody()
    </div>
        
        <footer class="footer navbar-default">
            <!-- Style vll noch Schöner Platzieren-->
            <div class="container" style="font-size:1.5em;font-weight:bolder">
                    <p class="col-lg-2  col-md-3 col-sm-3 col-lg-offset-3 col-md-offset-2 col-sm-offset-3 text-center" style="margin-bottom:0;margin-top:10px;">
                        <a href="@Url.Action("Impressum", "Home")">Impressum</a>
                    </p>
                    <p class="col-lg-2 col-md-3 col-sm-3 text-center" style="margin-bottom:0;margin-top:10px;">
                        <a href="@Url.Action("AGB", "Home")">AGB</a>
                    </p>
                    <p class="col-lg-3 col-md-3 text-center" style="margin-bottom:0;">
                        <img src="~/img/FirmenBilder/Copyright.png" alt="Copyright Sharkesh IT KG" height="50" />
                    </p>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
